---
import Logo from "../../public/Logo.webp";
import { Image } from "astro:assets";
---

<header class="flex items-center justify-between mt-8 m-16 w-10/12">
  <Image src={Logo} alt="FrankDev Logo" class="logo w-48 h-auto" />
  <nav class="flex items-center justify-center gap-20">
    <ul class="flex items-center justify-center gap-20">
      <li><a href="#" class="nav-item">Principal</a></li>
      <li><a href="#" class="nav-item">Sobre Mí</a></li>
      <li><a href="#" class="nav-item">Proyectos</a></li>
      <li><a href="#" class="nav-item">Referencias</a></li>
    </ul>
    <button
      type="button"
      class="flex items-center text-white bg-transparent tracking-wider
      py-3 pl-3 pr-4 rounded-xl text-lg"
    >
      <svg
        class="mr-1"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        width="24"
        height="24"
      >
        <path fill="none" d="M0 0h24v24H0z"></path>
        <path
          fill="currentColor"
          d="M5 13c0-5.088 2.903-9.436 7-11.182C16.097 3.564 19 7.912 19 13c0 .823-.076 1.626-.22 2.403l1.94 1.832a.5.5 0 0 1 .095.603l-2.495 4.575a.5.5 0 0 1-.793.114l-2.234-2.234a1 1 0 0 0-.707-.293H9.414a1 1 0 0 0-.707.293l-2.234 2.234a.5.5 0 0 1-.793-.114l-2.495-4.575a.5.5 0 0 1 .095-.603l1.94-1.832C5.077 14.626 5 13.823 5 13zm1.476 6.696l.817-.817A3 3 0 0 1 9.414 18h5.172a3 3 0 0 1 2.121.879l.817.817.982-1.8-1.1-1.04a2 2 0 0 1-.593-1.82c.124-.664.187-1.345.187-2.036 0-3.87-1.995-7.3-5-8.96C8.995 5.7 7 9.13 7 13c0 .691.063 1.372.187 2.037a2 2 0 0 1-.593 1.82l-1.1 1.039.982 1.8zM12 13a2 2 0 1 1 0-4 2 2 0 0 1 0 4z"
        ></path>
      </svg>
      <span>Contáctame!</span>
    </button>
  </nav>
</header>

<style>
  .nav-item {
    font-size: 1.1rem;
    position: relative;
  }

  .nav-item::before {
    content: "";
    width: 0;
    height: 1.5px;
    border-radius: 2px;
    background-color: #fff;
    position: absolute;
    bottom: -0.25rem;
    left: 50%;
    transition:
      width 0.35s,
      left 0.35s;
  }

  .nav-item:hover::before {
    width: 100%;
    left: 0;
  }

  button {
    border: 1px solid white;
  }

  button svg {
    transform: rotate(30deg);
    transition: transform 0.5s cubic-bezier(0.76, 0, 0.24, 1);
  }

  button span {
    transition: transform 0.5s cubic-bezier(0.76, 0, 0.24, 1);
  }

  button:hover svg {
    transform: translateX(5px) rotate(90deg);
  }

  button:hover span {
    transform: translateX(7px);
  }

  /* MEDIA QUERIES */

  @media (width<=1500px) {
    .nav-item,
    button {
      font-size: 0.9rem;
    }
    .logo {
      width: 8rem;
    }
    nav ul {
      gap: 3rem;
    }
    button {
      width: 10rem;
    }
  }
</style>
