---
import HeroText from "./Hero-Text";
import { Image } from "astro:assets";
import HeroImg from "../../../public/Hero-Img.png";
---

<section id="hero">
  <HeroText />
  <div class="hero-img">
    <Image src={HeroImg} alt="Hero Image" class="image" />
  </div>
</section>
<style>
  #hero {
    width: 70%;
    display: grid;
    grid-template-columns: 1.5fr 1fr;
  }
  .hero-img {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
