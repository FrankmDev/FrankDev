---
import HeroText from "./Hero-Text";
import { Image } from "astro:assets";
import HeroImg from "../../../public/Hero-Img.png";
---

<section class="hero">
  <HeroText />
  <div class="hero-img">
    <Image src={HeroImg} alt="Hero Image" class="image" />
  </div>
</section>
<style>
  .hero {
    width: 78%;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2.5rem;
  }
  .hero-img {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
