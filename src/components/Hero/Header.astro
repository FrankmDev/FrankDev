---
import Nav from "./Nav.astro";
import Logo from "../../../public/Logo.png";
import { Image } from "astro:assets";
---

<header class="header">
  <Image src={Logo} alt="FrankDev Logo" class="logo" />
  <Nav />
</header>

<style>
  .header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: 1rem 2rem;
  }
  .logo {
    width: 8rem;
    height: auto;
  }
</style>
